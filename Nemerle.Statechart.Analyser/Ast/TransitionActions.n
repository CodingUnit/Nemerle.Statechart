    name : string
    {
      get
      {
        match (this)
        {
          | Transition(Source = st)          => $"Transition$(st)To$(To)By$(FriendlyTriggerName)"
          | Internal(TriggerName = t)        => $"InternalTransition$(From)By$(t)"
          | Initial                          => $"InitialTransitionFrom$(From)To$To"
          | History                          => $"HistoryFrom$(From)To$ToState"
          | Default(history = h)             => 
              match (Destination)
              {
                | History(state = st) => $"DefaultTransition$(h)To$st"
                | _                   => $"DefaultTransition$(h)To$ActualTo"
              }
        }
      }
    }


