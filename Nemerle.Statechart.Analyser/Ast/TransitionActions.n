    public Clone() : StateTransition
    {
      match (this)
      {
        | Initial        => Initial(this)
        | Default(h)     => Default(this, h)
        | Transition(e)  => Transition(this, e)
        | History as h   => History(h)
        | Internal(t)    => Internal(this, t)
      }
    }

