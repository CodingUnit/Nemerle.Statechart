    public this(st : FsmState, tran : StateNode.Transition)
    {
      def an = st.analyser;
      this.analyser = an;
      Source = st;
      From = st;
      node = tran;
      when (tran != null)
      {
        guard = tran.guard;
        action = tran.action.MapDefault(x => x.actions, []);
      }
      To = if (tran.to != null) TransitionTarget.Create(st, tran.to) else TransitionTarget.Nowhere();
    }

