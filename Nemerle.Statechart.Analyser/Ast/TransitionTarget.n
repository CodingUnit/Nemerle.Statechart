    | JunctionNode
      {
        guard                     : GuardNode;
        action                    : option[Actions] = None();
        [NeedChange] to           : TransitionTarget;
        //parent                    : PseudoStateNode;
        [NeedChange(to)] next     : option[JunctionNode];
        //[NeedChange] state        : FsmState;
