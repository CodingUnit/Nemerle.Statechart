  [Traversable(All)]
  [Record]
  public partial variant TransitionTarget
  {
    [TraverseIgnore]
    | Nowhere
    
    | History 
      {
        [NeedChange] history : StateHistory;

        override ToString() : string
        {
          $"$(history.state)History"
        }

        this(st : FsmState, type : TargetType.History)
        {
          base(st.analyser);
          history = StateHistory.Create(st, -1, type.history)
        }
      }
      
    | Final
      {
        [NeedChange] state_num : FsmState;
        
        state : FsmState
        {
          get
          {
            state_num.Updated
          }
        }

        override ToString() : string
        {
          $"$(state)"
        }

      }
      
    [Traverse(junction(node = PseudoStateNode.Junction(_)))]
    [Traverse(merge(node = PseudoStateNode.Merge(_)))]
    | PseudoState
      {
        [NeedChange] node : PseudoStateNode;

        this(st : FsmState, node : TargetType.PseudoState)
        {
          def an = st.analyser;
          base(an);
          this.node = PseudoStateNode.Create(st, node.node);
        }

        override ToString() : string
        {
          node.ToString()
        }
      }
      
    | State 
      {
        [NeedChange]
        state_num : FsmState;
        
        state : FsmState
        {
          get
          {
            StateMap.Get(state_num)
          }
        }

        ChangeState(st : FsmState) : State
        {
          ChangeStateNum(st)
        }
        
        override UpdateReference(_ : FsmState) : TransitionTarget
        {
          def st = StateMap.Get(state_num);
          ChangeStateNum(st)
        }

        Name : string
        {
          get
          {
            state.Name
          }
        }

        override ToString() : string
        {
          state.ToString()
        }

        this(an : FsmAnalyser, type : TargetType.State)
        {
          base(an);
          state_num = FsmState.State(type.state, Enumerable.Empty(), an);
        }

        
      }

