using Nemerle;
using Nemerle.Collections;
using Nemerle.Text;
using Nemerle.Utility;

using System;
using Nemerle.Statechart;

  /// <summary>
  /// Description of PathCover.
  /// </summary>
  [statechart(<#

  flags testing;

  state A
  {
    a [a1] / act1 => B;
    a [a2] / act2 => B;
  }

  state B
  {
    b => A;
  }

  #>
  )]
  public class TestFsm
  {
    public a1 : bool {get;set;default true}
    public a2 : bool {get;set;default true}
  }


module Test
{
  Main() : void
  {
    def fsm = TestFsm();
    def tester = fsm.GetTester();
    tester.ConsoleTestInit();

      // "Starting state machine"
    tester.Initiate(["A"]);
    fsm.a1 = false;
     // testing transition with guard a2
    tester.Test("a", "B", "ExitA", "act2");
    // back to A
    tester.Test("b", "A", "ExitB");
    fsm.a2 = false;
    fsm.a1 = true;
    // testing transition with guard a1
    tester.Test("a", "B", "ExitA", "act1");
    fsm.Terminate()
  }
}

