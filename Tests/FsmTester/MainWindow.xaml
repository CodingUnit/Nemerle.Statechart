<Window x:Class="FsmTester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" Height="357" Width="461" ResizeMode="CanMinimize">                
    <StackPanel Height="315" Name="stackPanel1" Width="443" HorizontalAlignment="Left" VerticalAlignment="Top">
        <GroupBox Header="groupBox1" Height="203" Name="groupBox1" Width="344" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5,0,0,0">
            <Grid Height="175" Width="325" Margin="5,0,0,0" HorizontalAlignment="Left">
                <Canvas Name="canvas1"  Margin="11,6,6,13">
                <Image Height="36" Name="image_wheel_forw" Source="/FsmTester;component/Images/car_wheel.png" Stretch="None" Width="36" Canvas.Left="44" Canvas.Top="99" IsHitTestVisible="False" HorizontalAlignment="Left">
                    <Image.RenderTransform>
                        <RotateTransform x:Name="TransRotate2" CenterX="18" CenterY="18" Angle="0" />
                    </Image.RenderTransform>
                </Image>
                <Image Height="36" Name="image_wheel_back" Stretch="None" Width="36" Source="/FsmTester;component/Images/car_wheel.png" Grid.Column="1" Grid.Row="1" Canvas.Left="200" Canvas.Top="99" HorizontalAlignment="Left">
                    <Image.RenderTransform>
                        <RotateTransform x:Name="TransRotate1" CenterX="18" CenterY="18" Angle="0" />
                    </Image.RenderTransform>
                </Image>
                <Image Height="135" Stretch="None" Width="302" Source="/FsmTester;component/Images/car.png" Margin="20,6,-42,16" Grid.RowSpan="2" Grid.ColumnSpan="2" Canvas.Left="-15" Canvas.Top="5" HorizontalAlignment="Left"></Image>
                    <Canvas.Resources>
                    <Storyboard x:Key="spin">
                            <ParallelTimeline>
                                <DoubleAnimation Storyboard.TargetName="TransRotate1" Storyboard.TargetProperty="Angle"
                             From="360" To="0" Duration="0:0:6.787" RepeatBehavior="Forever" />
                                <DoubleAnimation Storyboard.TargetName="TransRotate2" Storyboard.TargetProperty="Angle"
                             From="360" To="0" Duration="0:0:6.787" RepeatBehavior="Forever" />
                            </ParallelTimeline>
                        </Storyboard>
                    </Canvas.Resources>
                </Canvas>
                <MediaElement Canvas.Left="80" Canvas.Top="150" Height="0" Name="car_starting" Width="0" Source="Car Starting.wav" LoadedBehavior="Manual" Grid.Column="1" Margin="148,88,167,88" />
            </Grid>
        </GroupBox>
        <Grid Height="57" Name="grid2" Width="396" VerticalAlignment="Top" HorizontalAlignment="Left" ClipToBounds="False">
            <TextBox Height="23" HorizontalAlignment="Left" Margin="42.667,21,0,0" Name="state_text" VerticalAlignment="Top" Width="120" Text="{Binding Mode=OneWay, Path=CurState}" UseLayoutRounding="False" Padding="1" IsReadOnly="True" BorderThickness="0" />
            <Label Content="State:" Height="28" HorizontalAlignment="Left" Margin="5,17,0,0" Name="label1" VerticalAlignment="Top" />
            <TextBox Height="23" HorizontalAlignment="Left" Margin="214,18,0,0" Name="textBox2" VerticalAlignment="Top" Width="120" />
        </Grid>
        <Grid Height="39" Name="grid1" Width="391" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button Content="Key" Height="23" Name="key_button" Width="75" Margin="15,10,25,6"></Button>
            <Button Content="Break" Height="23" Name="break_button" Width="75" Grid.Column="1" Margin="16,10,23,6" />
            <Button Content="Gas" Height="23" Name="gas_button" Width="75" MouseLeftButtonDown="gas_button_MouseLeftButtonDown" Grid.Column="2" Margin="18,10,21,6" MouseLeftButtonUp="gas_button_MouseLeftButtonUp" PreviewMouseLeftButtonDown="gas_button_PreviewMouseLeftButtonDown" PreviewMouseLeftButtonUp="gas_button_PreviewMouseLeftButtonUp" />
        </Grid>
        
    </StackPanel>
</Window>
