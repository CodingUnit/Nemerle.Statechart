using Nemerle;
using Nemerle.Collections;
using Nemerle.Text;
using Nemerle.Utility;

using System;
using System.Collections.Generic;
using System.Linq;
using Nemerle.Statechart;

namespace Nemerle.Statechart.Tests
{
  using FileFsm.Event;
  
  /// <summary>
  /// Description of FileFsmDialogs.
  /// </summary>
  [statechart(<#

  flags : auto_initial transition_completed_events;
  //flags : debug;

  name : FileDialogs;

  state Working
  {
    ButtonPressed => Dialogs;
  }
  
  state Dialogs
  {
    Cancel => Working;
    _      => Working;
    
    state SaveChecking
    {
      do / save_checking;
      
      _ [NewFile]  => NewDialog;
      _ [OpenFile] => OpenDialog;
      _ [Exit] / send_event() => $0; // Exiting)
    }
    
    state NewDialog
    {
      OK / send_event() => $0; // NewFileCreated
    }
    
    state OpenDialog
    {
      OK / send_event() => $0; // FileSaved
    }
  }

  #>
  )]
  class FileFsmDialogs
  {
    file_fsm : FileFsm = FileFsm();
    
    [Constructor]
    Init() : void
    {
      file_fsm.Initiate();
    }
    
    send_event() : void // evt : FileFsm.Event
    {
      //file_fsm.SendEvent(evt)
    }
    
    NewFile : bool
    {
      get
      {
        true
      }
    }
    
    OpenFile : bool
    {
      get
      {
        true
      }
    }
    
    Exit : bool
    {
      get
      {
        true
      }
    }
  }
}
