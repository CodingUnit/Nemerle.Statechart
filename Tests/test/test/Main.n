using Nemerle;
using Nemerle.Collections;
using Nemerle.Text;
using Nemerle.Utility;

using System;
using Nemerle.Statechart;

  /// <summary>
  /// Description of PathCover.
  /// </summary>
  [statechart(<#

  flags testing;

  state D
  {

    a [a1] => C; // W: Transition TransitionAToCBya is overriden by TransitionAToBBya, due to execute priority rules, because this transition is always enabled

    state A
    {
      a       => B;
    }

  }

  state B
  {
  }

  state C // W: State "C" is not used in fsm life history
  {
  }
  #>
  )]
  public class TestFsm
  {
    public a1 : bool {get;set;default true}
  }


module Test
{
  Main() : void
  {
    def fsm = TestFsm();
    def tester = fsm.GetTester();
    tester.ConsoleTestInit();

      // "Starting state machine"
    tester.Initiate(["D", "A"]);
     // testing transition overriden by no guard
    tester.Test("a", "B", ["A", "D"], []);
    fsm.Terminate()
  }
}

