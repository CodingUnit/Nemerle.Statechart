using Nemerle;
using Nemerle.Collections;
using Nemerle.Text;
using Nemerle.Utility;

using System;
using Nemerle.Statechart;

  /// <summary>
  /// Description of PathCover.
  /// </summary>
  [statechart(<#

  flags testing;
  
  a => B;
  
  state A
  {
    a [a1] => C;
  }

  state B
  {
  }

  state C
  {
    b => A;
  }
  #>
  )]
  public class TestFsm
  {
    public a1 : bool {get;set;default true}
  }


module Test
{
  Main() : void
  {
    def fsm = TestFsm();
    def tester = fsm.GetTester();
    tester.ConsoleTestInit();

      // "Starting state machine"
    tester.Initiate(["A"]);
     // testing transition with guard
    tester.Test("a", "C", "ExitA");
     // back again
    tester.Test("b", "A", "ExitC");
     // set guard to false
    fsm.a1 = false;
     // testing runtime conflict resolve with guard
    tester.Test("a", "B", ["A", "Top"], ["Top"]);
    fsm.Terminate()
  }
}

