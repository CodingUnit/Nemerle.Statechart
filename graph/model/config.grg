pattern GetRegion(st : State, def parent : ConcurrentState)
{
	(
		reg:ConcurrentState<st>;
		yield {yield parent = reg;}
	|
		p:State -:Contains-> st;
		
		~(:ConcurrentState<st>;)
		
		:GetRegion(p, yield parent);		
	)
}

