    public ReduceDo[T, TAcc](this obj : ICachedTraversable[T], init : TAcc, ctx : ITwoAccIteratorContext[T, T, TAcc]) : T * TAcc where T : class, ITraversable[T]
    {
      def stack = SCG.Stack();

      def fold_func(x, l, acc2)
      {
        def child : IEnumerable[T] = stack.PopRev(l);
        def (acc, acc2) = ctx.Visit(obj.Current, child, acc2);
        def acc = if (acc != null) acc else x.Rebuild(child);
        stack.Push(acc);
        acc2
      }

      def (lst, len) = obj.LengthIterator();
      def acc2= lst.Fold2(len, init, fold_func);
      def acc = stack.Pop();
      (acc, acc2)
    }

    public ReduceDo[T](this obj : ICachedTraversable[T], ctx : IIteratorContext[T, T]) : T where T : class, ITraversable[T]
    {
      def stack = SCG.Stack();

      def fold_func(x, l, _)
      {
        def child = stack.PopRev(l);
        def acc = ctx.Visit(obj.Current, child);
        def acc = if (acc != null) acc else x.Rebuild(child);
        stack.Push(acc);
        acc
      }

      def (lst, len) = obj.LengthIterator();
      lst.Reduce2(len, fold_func).Current
    }

